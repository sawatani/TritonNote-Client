ion-modal-view
	ion-header-bar
		button.button.button-clear.icon.ion-arrow-left-c.button-stable(ng-click="close()")
		h1.title Report Detail
		.buttons
			button.button.button-clear.icon.ion-ios7-minus-outline.button-assertive(ng-click="delete(index)")
			button.button.button-clear.icon.ion-edit.button-balanced(ng-controller='EditReportCtrl', ng-click="edit()")
	ion-content(ng-controller='DetailReportCtrl')
		.card
			.item.item-image
				ion-scroll(delegate-handle="scroll-img-show-report", direction="xy", zooming="true", min-zoom="0.5", max-zoom="4")
					fathens-fit-img(src="report.photo.mainview")
		.list
			.row.item.item-input
				.col-25.input-label
					p Date
				.col
					p {{report.dateAt | date: 'yyyy/MM/dd'}}
			.row.item.item-input.item-icon-right
				.col-25.input-label
					p Spot
				.col
					p {{report.location.name}}
				.icon.ion-earth.positive(ng-click="showMap()")
			.row.item.item-input.item-wrap-text
				.col-25.input-label
					p Comment
				.col
					pre {{report.comment}}

		.list
			.bar.item
				p.title Catches
			ion-list
				ion-item.item-button-right(ng-repeat="fish in report.fishes")
					p {{fish | fishFilter}}
