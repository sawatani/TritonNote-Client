.modal
	ion-header-bar
		button.button.button-clear.icon.ion-arrow-left-c.button-stable(ng-click="close()")
		h1.title Record Detail
		button.button.button-clear.icon.ion-edit.button-balanced(ng-controller='EditRecordCtrl', ng-click="edit()")
	ion-content
		.card
			.item.item-image
				img.full-image(src="{{ record.photo }}")
		.list
			.row.item.item-input
				.col-25.input-label
					p Date
				.col
					p {{record.dateAt}}
			.row.item.item-input.item-icon-right
				.col-25.input-label
					p Spot
				.col
					p {{record.location.name}}
				.icon.ion-earth.positive(ng-click="showMap()")

		.list
			.bar.item
				p.title Catches
			ion-list
				ion-item.item-button-right(ng-repeat="fish in record.fishes")
					p {{fish | fishFilter}}

		.list
			.item.item-divider
				button.button.button-block.button-small.button-outline.button-assertive.icon.icon-left.ion-close(ng-click="delete(index)") Delete this record
