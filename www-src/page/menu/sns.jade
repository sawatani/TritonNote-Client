ion-view(title="Social Connection")
	ion-nav-buttons(side="left")
		button.button.button-clear.icon.ion-arrow-left-c.button-stable(ng-click="close()")
	ion-content
		.list
			.item.item-divider
				h2.title Connections
			.item.item-toggle
				.input-label
					p Facebook
				label.toggle.toggle-balanced
					input(type='checkbox', ng-model="social.login", ng-change="checkSocial()", ng-disabled="changing")
					.track
						.handle
				.item-text-wrap(ng-show="social.login")
					p {{ social.username }}
