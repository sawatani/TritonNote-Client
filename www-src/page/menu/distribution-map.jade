ion-view
	ion-header-bar
		button.button.button-clear.icon.ion-arrow-left-c.button-stable(ng-click="closeMap()")
		h1.title Map View
		button.button.button-clear.icon.ion-more.button-stable(ng-click="showOptions()")

	ion-content(scroll="false")
		#distribution-map(style="height: 100%")

	script(type="text/ng-template", id="distribution-map-options")

		.list
			.item.item-input.item-toggle
				.input-label
					p Include Others
				label.toggle.toggle-positive
					input(type="checkbox", ng-model="view.others")
					.track
						.handle
			.item.item-input
				input(type="text", ng-model="view.name", placeholder="Fish Name Filter")
