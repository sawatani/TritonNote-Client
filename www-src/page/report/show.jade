ion-view(view-title="Report Detail")
	ion-nav-buttons(side="primary")
		button.button.button-clear.icon.ion-ios7-minus-outline.button-assertive(ng-click="delete()")
	ion-nav-buttons(side="secondary")
		button.button.button-clear.icon.ion-edit.button-balanced(ng-click="useCurrent()", ui-sref="edit-report")
	ion-content
		.card
			.item.item-image
				fathens-fit-img(src="report.photo.mainview", delegate-handle="scroll-img-show-report", direction="xy", zooming="true", min-zoom="0.5", max-zoom="4")
		.list
			.row.item.item-input
				.col-25.input-label
					p Date
				.col
					p {{report.dateAt | date: 'yyyy/MM/dd'}}
			.row.item.item-input.item-icon-right
				.col-25.input-label
					p Spot
				.col
					p {{report.location.name}}
				.icon.ion-earth.positive(ng-click="useCurrent()", ui-sref="view-on-map")
			.row.item.item-input.item-wrap-text
				.col-25.input-label
					p Comment
				.col
					pre {{report.comment}}

		.list
			.bar.item
				p.title Catches
			ion-list
				ion-item.item-button-right(ng-repeat="fish in report.fishes")
					p {{fish | fishFilter}}
