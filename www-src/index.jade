- var app = { name: 'Fish', title: 'Adding Fish' }
doctype html
html(ng-app=app.name)
	head
		include _header
	body(ng-controller='BaseCtrl')
		ion-side-menus
			ion-side-menu-content
				ion-header-bar
					.button.button.button-clear.icon.ion-navicon.button-dark(menu-toggle="left")
					h1.title My Record
					.button.button.button-clear.icon.ion-plus-round.button-positive(ng-click="addRecord()")

				ion-content(ng-controller='TopCtrl')
					.list.card
						.item.item-body(ng-repeat="record in records", ng-click="detail({{ $index }})")
							img.full-image(src="{{ record.image }}")
							.list
								.item(ng-repeat="fish in record.fishes")
									p {{fish.name}} x {{fish.count}}

			ion-side-menu(side="left")
				ion-header-bar
					.button.button.button-clear.icon.ion-ios7-close-empty.button-dark(menu-close)
					h1.title Menu
				ion-content
					.list
						.item(ng-click="openMap()")
							p View on Map
