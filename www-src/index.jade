- var app = { name: 'Fish', title: 'Adding Fish' }
doctype html
html(ng-app=app.name)
	head
		include _header
	body
		ion-side-menus
			ion-side-menu-content
				ion-header-bar
					.button.button-clear.icon.ion-navicon.button-dark(menu-toggle="left")
					h1.title My Reports
						.button.button-clear.icon.ion-refresh.button-stable(ng-controller='ShowReportsCtrl', ng-click="clear()")
					.button.button-clear.icon.ion-plus-round.button-positive(ng-controller='AddReportCtrl', ng-click="open()")

				ion-content(ng-controller='ShowReportsCtrl')
					.list.card
						.item.item-body(ng-repeat="report in reports")
							img.full-image(src="{{ report.photo }}", ng-click="detail({{ $index }})")
							.list
								.item(ng-repeat="fish in report.fishes")
									p {{fish | fishFilter}}
					ion-infinite-scroll(ng-if="hasMoreReports", on-infinite="moreReports()")

			ion-side-menu(side="left")
				ion-header-bar
					.button.button.button-clear.icon.ion-ios7-close-empty.button-dark(menu-close)
					h1.title Menu
				ion-content(ng-controller='MenuCtrl')
					.list
						.item(ng-click="openMap()")
							p View on Map
						.item(ng-click="connectFB()")
							p Connect to Facebook
